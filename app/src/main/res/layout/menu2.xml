<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_menu"
    tools:context="com.dam2024m8uf1_tfinal.drivera.Menu2"
    android:alpha="0.8">

    <EditText
        android:id="@+id/etPlataforma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Plataforma"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:focusable="true" />

    <EditText
        android:id="@+id/etPublicador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Publicador"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/etPlataforma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:focusable="true" />

    <CheckBox
        android:id="@+id/cbModoHistoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo Historia"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/etPublicador"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etFechaLanzamiento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha de Lanzamiento (DD/MM/AAAA)"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/cbModoHistoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:focusable="false" />

    <EditText
        android:id="@+id/etNumeroJugadores"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Número de Jugadores"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/etFechaLanzamiento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:focusable="true" />

    <EditText
        android:id="@+id/etDuracionPromedio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Duración Promedio (minutos)"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/etNumeroJugadores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:focusable="true" />

    <EditText
        android:id="@+id/etMotorGrafico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Motor Gráfico"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/etDuracionPromedio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:focusable="true" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Videojuego"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/etMotorGrafico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnMostrarDetalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Detalles"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnActualizar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnMostrarDetalles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
